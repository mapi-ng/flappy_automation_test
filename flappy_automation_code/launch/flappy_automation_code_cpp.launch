<launch>
  <!-- launch script for cpp automation of flappy  -->

  <node name="laser_scan_assembler" pkg="laser_assembler" type="laser_scan_assembler" output="screen">
    <remap from="scan" to="flappy_laser_scan" />
    <param name="max_scans" type="int" value="200" />
    <param name="fixed_frame" type="string" value="map" />
  </node>
  <node name="pointcloud_processor" pkg="flappy_automation_code" type="pointcloud_processor_node" output="screen">
    <param name="leaf_size" type="double" value="0.15" />
    <param name="publish_pointclouds" type="bool" value="true" />
    <param name="cluster_tolerance" type="double" value="0.5" />
    <param name="min_cluster_size" type="double" value="20" />
    <param name="max_cluster_size" type="double" value="1500" />
    <param name="pointcloud_acquisition_time" type="int" value="5" />
  </node>
  <node name="flappy_automation_code" pkg="flappy_automation_code" type="flappy_automation_code_node" output="screen" />
  <node name="flappy_main_game" pkg="flappy_main_game" type="flappy.py" output="screen" />
  <node name="rviz" pkg="rviz" type="rviz" output="screen" />
</launch>
